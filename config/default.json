{
  "model": {
    "architecture": "simple_cnn",
    "input_size": [224, 224],
    "num_classes": 2,
    "dropout_rate": 0.3,
    "pretrained": false,
    "save_path": "models/face_antispoofing_model.pth"
  },
  "training": {
    "num_epochs": 50,
    "batch_size": 32,
    "learning_rate": 0.001,
    "optimizer": "adam",
    "weight_decay": 0.0001,
    "early_stopping_patience": 10,
    "num_workers": 4,
    "scheduler": "cosine",
    "warmup_epochs": 5
  },
  "data": {
    "dataset_path": "test_img",
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "augmentation": true,
    "normalize": true,
    "resize_to": [224, 224]
  },
  "detection": {
    "landmark_method": "mediapipe",
    "confidence_threshold": 0.7,
    "min_detection_confidence": 0.5,
    "min_tracking_confidence": 0.5,
    "blink_ear_threshold": 0.25,
    "head_pose_threshold": 15.0
  },
  "challenge": {
    "enabled": true,
    "challenge_types": ["blink", "head_movement", "smile"],
    "timeout_seconds": 10,
    "min_challenges": 2,
    "success_threshold": 0.8
  },
  "web": {
    "host": "localhost",
    "port": 5000,
    "debug": false,
    "secret_key": "change-this-in-production-please",
    "database_url": "sqlite:///attendance.db"
  },
  "device": "auto",
  "log_level": "INFO",
  "save_predictions": true,
  "logs_dir": "logs"
}
